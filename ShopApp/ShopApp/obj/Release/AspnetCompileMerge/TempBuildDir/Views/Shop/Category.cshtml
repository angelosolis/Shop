@model IEnumerable<ShopApp.Category>

@{
    ViewBag.Title = "Category";
    ViewBag.HeaderTitle = "List Category";
    Layout = "~/Views/Shared/_ShopLayoutPage.cshtml";
}

<button id="btnCreate" type="button" class="btn btn-info btn-lg">Create New</button>

<table id="myTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Date Create / Modified
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    @item.dateCreated.Value.ToLongDateString()
                </td>
                <td>
                    <button class="btn btn-primary" onclick="onEdit(@item.categoryId)" style="cursor: pointer;"><i class="fa fa-edit"></i> Edit</button> |
                    <button class="btn btn-danger" onclick="onDelete(@item.categoryId)" style="cursor: pointer;"><i class="fa fa-trash"></i> Delete</button>

                </td>
            </tr>
        }
    </tbody>
</table>
